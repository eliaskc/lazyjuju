{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"$schema": {
			"description": "JSON Schema reference for editor autocomplete",
			"type": "string"
		},
		"ui": {
			"default": {
				"theme": "lazygit"
			},
			"description": "UI settings",
			"type": "object",
			"properties": {
				"theme": {
					"default": "lazygit",
					"description": "Color theme",
					"type": "string",
					"enum": ["lazygit", "opencode"]
				}
			}
		},
		"diff": {
			"default": {
				"defaultMode": "unified",
				"autoSwitchWidth": 120,
				"wrap": true
			},
			"description": "Diff display settings",
			"type": "object",
			"properties": {
				"defaultMode": {
					"default": "unified",
					"description": "Default diff view mode",
					"type": "string",
					"enum": ["unified", "split"]
				},
				"autoSwitchWidth": {
					"default": 120,
					"description": "Auto-switch to split view above this terminal width (0 to disable)",
					"type": "integer",
					"minimum": 0,
					"maximum": 9007199254740991
				},
				"wrap": {
					"default": true,
					"description": "Wrap long lines in diff view",
					"type": "boolean"
				}
			}
		},
		"files": {
			"default": {
				"showTree": true
			},
			"description": "File list settings",
			"type": "object",
			"properties": {
				"showTree": {
					"default": true,
					"description": "Show files as tree (false for flat list)",
					"type": "boolean"
				}
			}
		},
		"whatsNewDisabled": {
			"default": false,
			"description": "Disable the what's new screen on updates",
			"type": "boolean"
		}
	},
	"description": "kajji configuration"
}
